#!/bin/bash
#
# link - makes a symbolic link

POSITIONAL_ARGS=()

while [[ $# -gt 0 ]]; do
    case $1 in
        -a|--absolute)
            ABSOLUTE=1
            shift
            ;;
        -h)
            HELP=1
            shift
            ;;
        --*|-*)
            echo "Unknown option $1"
            exit 1
            ;;
        *)
            # save positional arg
            POSITIONAL_ARGS+=("$1")
            shift
            ;;
    esac
done

# restore positional parameters
set -- "${POSITIONAL_ARGS[@]}"

if [[ -z "$1" || -z "$2" || -n "$HELP" ]]; then
    cat << EOF
Usage: $0 [-h] [-a/--absolute] <file> <target>

Creates a sybolic link at <file> that points to <target>, where target is used verbatim unless --absolute is passed then it is converted into absolute path
The target is backed up with a tilde ~ suffix, IF A BACKUP ALREADY EXISTS IT IS DELETED PERMANENTLY
EOF
    exit 0
fi

if [[ -e "$1" || -L "$1" ]]; then
    echo "Backing up $1"

    # delete old backup if it exists
    if [[ -e "${1:?}~" || -L "${1:?}~" ]]; then
        rm -rf "${1:?}~"
    fi

    # backup the current version
    mv "$1" "${1:?}~"
fi

TARGET=$2

# get absolute path
if [[ -n "$ABSOLUTE" ]]; then
    # TODO i do not know how portable realpath is
    TARGET=$(realpath --no-symlinks "$TARGET")
fi

echo "Linking $1 to $TARGET"
ln -s "$TARGET" "$1"

