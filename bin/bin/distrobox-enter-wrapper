#!/usr/bin/env sh
#
# distrobox-enter-wrapper - wrapper around distrobox-enter
#
# this scripts solves the problem where process keeps running in background
# even after distrobox-enter script dies, probably does not work on docker

if [ -z "$1" ]; then
    echo "Please provide container name"
    exit 1
fi

PIDFILE_DIR="$HOME/.local/state/distrobox"
PIDFILE="$PIDFILE_DIR/$$"

mkdir -p "$PIDFILE_DIR"
touch "$PIDFILE"

nohup sh <<EOF >/dev/null 2>&1 &
# wait for the main script to end
while ps -p $$ >/dev/null; do
    sleep 4s
done

# get pid from the file
PID="\$(cat "$PIDFILE")"
rm -f "$PIDFILE"

# conmon already dead, quit
if ! ps -p "\$PID" >/dev/null; then
    exit 0
fi

# kill conmon
kill -1 "\$PID"

# quit
exit 0
EOF

# distrobox does not copy the host terminfo so this is a quick fix
export TERM=xterm-256color
distrobox enter "$1" -- sh -c "echo \$PPID > $PIDFILE; exec ${2:-$SHELL}"

