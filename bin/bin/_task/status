#!/usr/bin/env bash
#
# task/status - shows only last heading/log

DIR="$HOME/.task"

[[ ! -f "$DIR/.current.md" ]] && exit 1

# shows only the last heading
LINE="$(awk 'BEGIN { line=0 } /^#/ { line=NR } END { print line }' "$DIR/.current.md")"
if command -v glow &>/dev/null; then
    tail -n +"$LINE" "$DIR/.current.md" | glow
else
    tail -n +"$LINE" "$DIR/.current.md"
fi
